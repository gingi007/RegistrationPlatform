<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= eventname %> Registration</title>

    <!-- CSS -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.5/css/bootstrap.min.css"
          integrity="sha384-AysaV+vQoT3kOAXZkl02PThvDr8HYKPZhNT5h/CXfBThSRXQ6jW5DO2ekP5ViFdi" crossorigin="anonymous">
    <link rel="stylesheet" href="assets/css/style.css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>

    <![endif]-->
    <!-- Favicon and touch icons -->
    <link rel="shortcut icon" href="assets/ico/favicon.png">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="assets/ico/apple-touch-icon-57-precomposed.png">

</head>

<body>

<!-- Top menu -->
<nav class="navbar navbar-inverse navbar-no-bg" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#top-navbar-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="/"><img class="logo-hack" src="/assets/img/mini-logo.png" alt=""/></a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="top-navbar-1">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="<%= eventwebsite %>"><strong><%= eventname %></strong></a>
                    <span class="li-social">
								<a href="<%= eventfacebook %>"><i class="fa fa-facebook"></i></a>

							</span>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Top content -->
<div class="top-content">

    <div class="inner-bg">

        <div class="row">
            <div class="col-sm-12 text">
                <h1><strong><%= eventname %></strong> Registered Users</h1>
                <div class="description">
                </div>
            </div>
        </div>
        <div class="row">
            <div style="margin: 40px;">
                <table class="table">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Degree</th>
                        <th>Shirt Size</th>
                        <th>Diet</th>
                        <th>Skills</th>
                        <th>Accepted</th>
                        <th>In Team</th>
                        <th>Role</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% for(var i = 0; i < users.length; i++) { %>
                    <tr>
                        <td><span>
                                <%= i + 1 %>
                            </span></td>
                        <td><%= users[i].first_name + " " + users[i].last_name %></td>
                        <td><span id="email"><%= users[i].email %></span></td>
                        <td><span class="phone"><%= users[i].phone %></span></td>
                        <td><span class="deg"><%= users[i].degree %></span></td>
                        <td><span class="size"><%= users[i].tshirt %></span></td>
                        <td><span class="food"><%= users[i].food %></span></td>
                        <td>
                            <% if (users[i].tags) {
                            %>
                            <select name="skills" class="skills">
                                <% Object.keys(users[i].tags).forEach(function(key){
                                %>
                                <option><%= users[i].tags[key] %> </option>
                                <%
                                }) %>
                            </select>
                            <% } else { %>
                            <span>No Skills</span>
                            <%
                            } %>
                        </td>
                        <td><input id="<%= users[i]._id %>" type="checkbox" name="isAccepted"
                                    <% if (users[i].accepted) { %>
                                   checked
                                    <% } %>
                            />
                        </td>
                        <td><input data-uid="<%= users[i]._id %>" type="checkbox" name="isMember"
                                    <% if (users[i].isMember) { %>
                                   checked
                                    <% } %>
                            />
                        </td>

                        <td><select data-uid="<%= users[i]._id %>" name="role" class="role" >
                                <% Object.keys(roles).forEach(function(key){ %>
                                <option value="<%= key %>" <% if (users[i].role === roles[key]){ %>
                                        selected
                                        <% } %> >
                                    <%= key %>

                                </option>
                                <% }) %>
                            </select></td>
                    </tr>
                    <% } %>
                    </tbody>
                </table>

            </div>

        </div>


    </div>

</div>


<!-- Javascript -->
<script
        src="https://code.jquery.com/jquery-3.1.1.min.js"
        integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
        crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.5/js/bootstrap.min.js"
        integrity="sha384-BLiI7JTZm+JWlgKa0M0kGRpJbF2J8q+qreVrKBC47e3K6BW78kGLrCkeRX6I9RoK"
        crossorigin="anonymous"></script>


<script src="assets/js/jquery.backstretch.min.js"></script>
<script src="assets/js/retina-1.1.0.min.js"></script>
<script src="assets/js/scripts.js"></script>
<script src="assets/js/admin.js"></script>
<script src="assets/js/jquery.qtip.js"></script>

<!--[if lt IE 10]>
<script src="assets/js/placeholder.js"></script>
<![endif]-->

</body>

</html>

